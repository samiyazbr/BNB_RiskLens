{
  "manifest_version": 3,
  "name": "RiskLens Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injected-eip6963.js",
        "proactive-monitor.js",
        "src/ruleEngine.js",
        "src/score.js",
        "src/utils/fetchOnChainData.js",
        "src/utils/liquidityCheck.js",
        "src/utils/contractMetadata.js"
      ],
      "matches": ["http://*/*", "https://*/*", "file://*/*"]
    }
  ]
}
